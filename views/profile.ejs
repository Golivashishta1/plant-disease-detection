<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Profile Page</title>
    
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Urbanist:wght@400;600&display=swap');
        body {
            font-family: 'Urbanist', sans-serif;
            background-color: #eff6f4;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: 20px;
            color: #333;
            margin: 0;
            overflow-x: hidden;
        }

        .profile-container {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 20px;
            max-width: 1200px;
            width: 100%;
            background: linear-gradient(135deg, #e3f5e6, #ffffff);
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
            padding: 40px;
            animation: fadeIn 1s ease-out;
        }

        .profile-section {
            background: #fff;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
            position: relative;
            transition: all 0.3s ease;
        }

        .profile-section:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }

        .profile-icon {
            height: 100px;
            width: 100px;
            border-radius: 50%;
            border: 4px solid #72c07e;
            transition: transform 0.4s ease;
            object-fit: cover;
            position: relative;
            bottom: 100px;
        }

        .profile-icon:hover {
            transform: scale(1.1);
        }

        .user-info {
            font-size: 24px;
            color: #333;
            margin-top: -20px;
            position: relative;
            bottom: 100px; /* Adjust this value to your liking */
        }

        .user-name {
            font-size: 32px;
            font-weight: bold;
            color: #33644B;
            margin-bottom: 5px;
        }

        .user-role, .user-city {
            font-size: 18px;
            color: #777;
            margin-top: 8px;
        }

        .results-section {
            display: flex;
            flex-direction: column;
            gap: 20px;
            animation: slideIn 0.8s ease-in-out;
        }

        .results-title {
            font-size: 28px;
            font-weight: bold;
            color: #33644B;
            margin-bottom: 10px;
            text-align: center;
        }

        .result-item {
            display: flex;
            align-items: center;
            padding: 30px;
            background: #ffffff;
            border-radius: 15px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .result-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.15);
        }

        .plant-image {
            width: 140px;
            height: 140px;
            border-radius: 15px;
            margin-right: 30px;
            object-fit: cover;
            transition: transform 0.4s ease;
        }

        .result-item:hover .plant-image {
            transform: scale(1.05);
        }

        .result-details {
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        .result-details p {
            font-size: 20px;
            color: #555;
            font-weight: 600;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .result-details p strong {
            color: #33644B;
            font-weight: bold;
        }

        /* Icon Decorations */
        .icon-calendar::before {
            content: "ðŸ“…";
        }

        .icon-disease::before {
            content: "ðŸŒ¿";
        }

        .icon-confidence::before {
            content: "ðŸ“Š";
        }

        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes slideIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .cover-photo {
            width: 100%;         /* Full width of the parent container */
            height: 300px;      /* Set height according to your preference */
            border-radius: 15px; /* Rounded top corners */
            object-fit: cover;  /* Ensures the image covers the area without distortion */
            margin-bottom: 20px; /* Space between cover and profile info */
        }

        /* Media Queries for Responsiveness */
        @media (max-width: 768px) {
            .profile-container {
                grid-template-columns: 1fr; /* Stack columns on smaller screens */
                padding: 20px;
            }

            .user-info {
                margin-top: 0; /* Adjust user info positioning */
                bottom: 0; /* Reset bottom positioning */
            }

            .user-name {
                font-size: 24px; /* Smaller font size */
            }

            .user-role, .user-city {
                font-size: 16px; /* Smaller font size */
            }

            .results-title {
                font-size: 24px; /* Smaller font size */
            }

            .result-item {
                padding: 20px; /* Adjust padding for smaller screens */
            }

            .plant-image {
                width: 100px; /* Smaller image size */
                height: 100px;
            }

            .result-details p {
                font-size: 18px; /* Smaller text size */
            }
        }

        @media (max-width: 480px) {
            .profile-icon {
                height: 80px; /* Smaller profile icon size */
                width: 80px;
            }

            .user-name {
                font-size: 20px; /* Further reduce size */
            }

            .results-title {
                font-size: 22px; /* Further reduce size */
            }
        }
    </style>
</head>
<body>

<div class="profile-container">
    <!-- Profile Section -->
    <div class="profile-section">
        <img src="https://res.cloudinary.com/dl0thhfbc/image/upload/v1730525546/rkgvetsk6eghg2pc6uae.jpg" alt="Cover Photo" class="cover-photo">
        <img src="https://res.cloudinary.com/danebk4br/image/upload/v1730821336/lzrmkyjgcbxj32xhvqqh.png" alt="Profile Icon" class="profile-icon">
        <div class="user-info">
            <h2 class="user-name"><%= user.name %></h2>
            <p class="user-role">Plant Specialist</p>
            <p class="user-city"><%= user.cityname %></p>
        </div>
    </div>

    <!-- Results Section -->
    <div class="results-section">
        <h3 class="results-title">Recent Plant Uploads</h3>

        <!-- Loop through the results from the database -->
        <% results.forEach(result => { %>
            <div class="result-item">
                <img src="<%= result.imagepath %>" alt="Uploaded Plant Image" class="plant-image">
                <div class="result-details">
                    <p><span class="icon icon-disease"></span><strong>Detected Disease:</strong> <%= result.disease %></p>
                    <p><span class="icon icon-confidence"></span><strong>Confidence:</strong> <%= result.confidence %> %</p>
                    <p><span class="icon icon-calendar"></span><strong>Date:</strong> <%= result.cityname %></p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

</body>
</html>
